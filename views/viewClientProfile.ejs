<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Create Client Profile</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
  </head>
  <body>

    <p>client name: <%= clientProfile.clientName %></p>
    <p>client description: <%= clientProfile.clientDescription %></p>
    <p>client info: <%= clientProfile.clientInfo %></p>
    <p>payment info: <%= clientProfile.paymentInfo %></p><br><br>

    <form class="" action="/createClientEvent" method="post">

        <input type="submit" name="submit" value="Create Event">

    </form>
    <form class="" action="/viewClientEvents" method="post">

        <input type="submit" name="submit" value="View Events">

    </form>

    <form class="" action="/uploadClientFile" method="post">

        <input type="submit" name="submit" value="Add picture or video">

    </form>
    <br>

    <% for(var i=0; i<clientPicturesResult.length; i++){%>
    <img src="./uploads/ClientPicturesUploads/<%=clientPicturesResult[i].pictureName%>" alt="Client picture" style="width:304px;height:228px;">
  <% } %>
<br>
<% for(var i=0; i<clientVideosResult.length; i++){%>
    <video width="320" height="240" controls>
        <source src="./uploads/ClientVideosUploads/<%=clientVideosResult[i].videoName%>" type="video/mp4">
        <source src="./uploads/ClientVideosUploads/<%=clientVideosResult[i].videoName%>"  type="video/ogg">
        Your browser does not support the video tag.
      </video>
<% } %>
  </body>
</html>
